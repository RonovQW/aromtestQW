{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/admin", "destination": "/api/index.js" },
    { "source": "/api/admin-login", "destination": "/api/index.js" },
    { "source": "/api/admin-logout", "destination": "/api/index.js" }
  ],
  "redirects": [
    { "source": "/admin-login.html", "destination": "/src/admin-login.html", "permanent": true }
  ]
}
